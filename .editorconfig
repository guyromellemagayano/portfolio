# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Ignore paths
[/.next/**]
[/node_modules/**]
[/dist/**]
[/build/**]
[/coverage/**]
[/.turbo/**]
[/.pnpm-store/**]
[/.npm-cache/**]
[/.git/**]
[/.husky/**]
[/.changeset/**]
[/.vscode/**]
[/.cursor/**]
[/.DS_Store]
[*.lock]
[*.log]
[*.min.js]
[*.min.css]
[*.map]