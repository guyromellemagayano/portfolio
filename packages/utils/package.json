{
  "name": "@guyromellemagayano/utils",
  "version": "1.0.0",
  "description": "Utility functions for React components and general development",
  "keywords": [
    "react",
    "utilities",
    "typescript"
  ],
  "homepage": "https://github.com/guyromellemagayano/portfolio/tree/main/packages/utils",
  "bugs": {
    "url": "https://github.com/guyromellemagayano/portfolio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guyromellemagayano/portfolio.git",
    "directory": "packages/utils"
  },
  "license": "MIT",
  "private": true,
  "author": "Guy Romelle Magayano <aspiredtechie2010@gmail.com> (https://www.guyromellemagayano.dev)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsdown --minify",
    "check-types": "tsc --noEmit",
    "clean": "rimraf node_modules .turbo dist coverage",
    "dev": "tsdown --watch",
    "format": "prettier --write \"src/**/*.{js,cjs,mjs,ts,cts,mts}\"",
    "format:check": "prettier --check \"src/**/*.{js,cjs,mjs,ts,cts,mts}\"",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix --ext .js,.cjs,.mjs,.ts,.cts,.mts src/",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:run": "vitest run",
    "test:run:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@guyromellemagayano/hooks": "workspace:*",
    "@guyromellemagayano/logger": "workspace:*"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@packages/vitest-presets": "workspace:*",
    "@testing-library/react": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  }
}
