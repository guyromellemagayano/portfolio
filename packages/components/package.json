{
  "name": "@guyromellemagayano/components",
  "version": "1.0.0",
  "description": "Reusable React components library with TypeScript support, analytics, accessibility features, and polymorphic support",
  "keywords": [
    "react",
    "components",
    "html",
    "polymorphic",
    "typescript"
  ],
  "homepage": "https://github.com/guyromellemagayano/portfolio/tree/main/packages/components",
  "bugs": {
    "url": "https://github.com/guyromellemagayano/portfolio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guyromellemagayano/portfolio.git",
    "directory": "packages/components"
  },
  "license": "MIT",
  "author": "Guy Romelle Magayano <aspiredtechie2010@gmail.com> (https://www.guyromellemagayano.dev)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsdown --minify",
    "check-types": "tsc --noEmit",
    "clean": "rimraf node_modules .turbo dist coverage",
    "dev": "tsdown --watch",
    "format": "prettier --write \"src/**/*.{js,cjs,mjs,ts,cts,mts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,cjs,mjs,ts,cts,mts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,cjs,mjs,ts,cts,mts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,cjs,mjs,ts,cts,mts,tsx}\"",
    "prepublishOnly": "npm run build",
    "scaffold": "tsx scripts/scaffold-component.ts",
    "scaffold:watch": "nodemon --exec \"tsx\" scripts/scaffold-component.ts",
    "test": "vitest",
    "test:components": "tsx scripts/test-components.ts",
    "test:components:watch": "nodemon --exec \"tsx\" scripts/test-components.ts",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:scripts": "vitest run --config vitest.scripts.config.ts scripts/__tests__/",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@guyromellemagayano/logger": "workspace:*"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@packages/vitest-presets": "workspace:*"
  },
  "peerDependencies": {
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/node": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "nodemon": "catalog:",
    "prettier": "catalog:",
    "react-dom": "catalog:",
    "react": "catalog:",
    "rimraf": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  }
}