{
  "extends": "@portfolio/config-typescript/src/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "sourceMap": true,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.mjs"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/__coverage__/**"
  ]
}
