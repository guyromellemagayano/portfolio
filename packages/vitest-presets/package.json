{
  "name": "@portfolio/vitest-presets",
  "version": "1.0.0",
  "private": true,
  "description": "Shared Vitest configuration presets",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./index.ts"
    },
    "./browser": {
      "types": "./browser/vitest-preset.ts",
      "default": "./browser/vitest-preset.ts"
    },
    "./node": {
      "types": "./node/vitest-preset.ts",
      "default": "./node/vitest-preset.ts"
    },
    "./react": {
      "types": "./react/vitest-preset.ts",
      "default": "./react/vitest-preset.ts"
    },
    "./shared": {
      "types": "./shared/index.ts",
      "default": "./shared/index.ts"
    },
    "./shared/test-setup.ts": {
      "types": "./shared/test-setup.ts",
      "default": "./shared/test-setup.ts"
    }
  },
  "main": "./index",
  "files": [
    "index.ts",
    "browser/**/*.ts",
    "node/**/*.ts",
    "react/**/*.ts",
    "shared/**/*",
    "__mocks__/**/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "test": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:run": "vitest run",
    "test:run:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@portfolio/logger": "workspace:*"
  },
  "optionalDependencies": {}
}
