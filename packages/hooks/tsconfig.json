{
  "extends": "@portfolio/config-typescript/src/base.json",
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM"
    ],
    "outDir": "./dist",
    "types": [
      "vitest/globals",
      "node"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
