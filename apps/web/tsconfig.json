{
  "extends": "@portfolio/config-typescript/src/nextjs.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/sanity-studio/config/cli": [
        "../../packages/sanity-studio/src/config/cli.ts"
      ],
      "@portfolio/sanity-studio/config/studio": [
        "../../packages/sanity-studio/src/config/studio.ts"
      ],
      "@portfolio/sanity-studio/schema-types": [
        "../../packages/sanity-studio/src/schema-types/index.ts"
      ],
      "@web/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.css",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**"
  ]
}
