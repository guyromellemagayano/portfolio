{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm --dir ../.. --filter api... build",
  "bunVersion": "1.x",
  "fluid": true,
  "outputDirectory": "public",
  "functions": {
    "api/**/*.js": {
      "includeFiles": "../../packages/{logger,api-contracts}/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/$1"
    }
  ]
}